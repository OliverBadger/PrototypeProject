@page
@model PrototypeProject.Pages.Warehouse.WViewModel
@{
}
<div>
    <div>
        <form method="post">
            <div>
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <table class="table table-active">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Stock[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock[0].Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock[0].Price)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>


        @for (int i = 0; i < Model.Stock.Count; i++)
        {
            <tr>
                <td>@Model.Stock[i].Id</td>
                <td>@Model.Stock[i].Title</td>
                <td>@Model.Stock[i].Count</td>
                <td>@Model.Stock[i].Price</td>
                <td>
                    <a asp-page="/Manager/Edit" asp-route-id="@Model.Stock[i].Id">Edit</a>
                    <a asp-page="/Manager/Remove" asp-route-id="@Model.Stock[i].Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>